<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F6F9"
    tools:context=".Fragment.ProfileFragment">

    <!-- Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="8dp"
        android:background="#1B9CFC"> <!-- Fresh Turquoise -->

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:text="Email"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" /> <!-- White Text -->

        <ImageView
            android:id="@+id/logoutBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:src="@drawable/baseline_logout_24" />
    </RelativeLayout>

    <!-- Profile Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF">

        <!-- Profile Image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/user"
            app:civ_border_color="#8A2BE2"
            app:civ_border_width="2dp" />

        <!-- Stats Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="24dp">

            <!-- Products Uploaded -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/products_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF6347" /> <!-- Tomato Red -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Products"
                    android:textSize="14sp"
                    android:textColor="#555555" /> <!-- Dark Gray -->
            </LinearLayout>

            <!-- Total Sales -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sales_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF6347" /> <!-- Tomato Red -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Sales"
                    android:textSize="14sp"
                    android:textColor="#555555" /> <!-- Dark Gray -->
            </LinearLayout>

            <!-- Ratings -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ratings_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF6347" /> <!-- Tomato Red -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ratings"
                    android:textSize="14sp"
                    android:textColor="#555555" /> <!-- Dark Gray -->
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Farmer Details Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/farm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Farm Name"
            android:textStyle="bold"
            android:textColor="#00A9A6" /> <!-- Fresh Turquoise -->

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Location: City, State"
            android:textColor="#555555" /> <!-- Dark Gray -->

        <TextView
            android:id="@+id/contact_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Contact: +91 1234567890"
            android:textColor="#555555" /> <!-- Dark Gray -->

        <!-- UPI ID -->
        <TextView
            android:id="@+id/upi_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="UPI ID: N/A"
            android:textColor="#555555"/>

        <!-- Bank Account Number -->
        <TextView
            android:id="@+id/bank_account_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Bank Account: N/A"
            android:textColor="#555555"/>

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_product_button"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:text="Add Product"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/view_orders_button"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:text="View Orders"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/edit_profile_button"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:text="Edit Profile"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />
    </LinearLayout>


</LinearLayout>